{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@server/*": ["server/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@handlers/*": ["handlers/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"]
    },
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "server/**/*",
    "services/**/*",
    "repositories/**/*",
    "entities/**/*",
    "utils/**/*",
    "types/**/*",
    "db**/*"
  ],
  "exclude": ["node_modules"]
}
